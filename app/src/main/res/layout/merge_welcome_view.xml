<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

  <LinearLayout
    android:id="@+id/welcome_sender_layout"
    style="@style/Welcome.Sender.Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/user_avatar"
      style="@style/Welcome.Sender.Image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dimen_60" />

    <TextView
      android:id="@+id/welcome_message_view"
      style="@style/Welcome.Sender.Message"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/dimen_86"
      android:layout_marginTop="@dimen/dimen_16" />
  </LinearLayout>

  <TextView
    style="@style/Welcome.Message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_24"
    android:layout_marginLeft="@dimen/dimen_16"
    android:layout_marginRight="@dimen/dimen_16"
    android:layout_marginTop="@dimen/dimen_48"
    android:text="@string/str_request" />

  <TextView
    android:id="@+id/proceed_button"
    style="@style/Welcome.ProceedButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_16"
    android:text="@string/str_save_life" />

</merge>
