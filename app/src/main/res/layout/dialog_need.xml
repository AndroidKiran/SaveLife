<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dimen_54"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dimen_4"
                android:layout_gravity="bottom"
                app:cardBackgroundColor="@color/material_white"
                android:layout_marginTop="@dimen/dimen_50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:layout_marginBottom="@dimen/dimen_30"
                    android:orientation="vertical">

                    <com.donate.savelife.component.text.TextView
                        android:id="@+id/need_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingLeft="@dimen/dimen_16"
                        android:paddingRight="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_6"
                        android:textColor="@color/grey_charcoal"
                        android:textSize="@dimen/font_16"
                        app:fontTypeface="museosans700" />

                    <com.donate.savelife.component.text.TextView
                        android:id="@+id/address_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingLeft="@dimen/dimen_16"
                        android:paddingRight="@dimen/dimen_16"
                        android:textColor="@color/grey_charcoal"
                        android:textSize="@dimen/font_16"
                        app:fontTypeface="museosans500" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/dimen_96"
                android:layout_height="@dimen/dimen_96"
                android:layout_gravity="center_horizontal"
                android:elevation="@dimen/dimen_8"
                app:border_color="#FFF"
                app:border_width="@dimen/dimen_8" />

        </FrameLayout>


    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_76"
        android:layout_marginBottom="@dimen/dimen_16"
        app:backgroundTint="?attr/colorPrimary"
        app:fabSize="normal"
        app:layout_anchor="@id/appbar"
        android:elevation="@dimen/dimen_4"
        app:layout_anchorGravity="bottom|right|end"
        app:srcCompat="@drawable/ic_location_on_black_24dp" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_16"
        app:backgroundTint="?attr/colorPrimary"
        app:fabSize="normal"
        android:elevation="@dimen/dimen_4"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end"
        app:srcCompat="@drawable/ic_phone_black_24dp" />

</android.support.design.widget.CoordinatorLayout>