<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/intro_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon1"
            android:layout_width="@dimen/dimen_256"
            android:layout_height="@dimen/dimen_256"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_hands" />


        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_below="@+id/icon1"
            android:text="@string/str_title1"
            android:textColor="@color/material_white"
            android:textSize="26sp" />


        <TextView
            android:id="@+id/description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginRight="@dimen/dimen_16"
            android:layout_below="@+id/title1"
            android:maxEms="18"
            android:text="@string/str_description1"
            android:textColor="@color/material_white"
            android:textSize="@dimen/font_18" />

    </RelativeLayout>

</FrameLayout>