<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.donate.savelife.component.text.TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/grey_charcoal"
            android:textSize="@dimen/font_8"
            app:fontTypeface="museosans500"
            tools:text="9 may 16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/need_avatar"
                layout="@layout/need_avatar" />


            <com.donate.savelife.component.text.TextView
                android:id="@+id/response_count"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_centerVertical="true"
                android:background="@drawable/green_radius"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="@dimen/dimen_2"
                android:paddingLeft="@dimen/dimen_2"
                android:paddingRight="@dimen/dimen_2"
                android:paddingTop="@dimen/dimen_2"
                android:textColor="@color/material_white"
                android:textSize="@dimen/font_14"
                app:fontTypeface="museosans500"
                tools:text="23" />

            <LinearLayout
                android:id="@+id/need_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dimen_2"
                android:layout_toRightOf="@id/need_avatar"
                android:orientation="vertical">

                <com.donate.savelife.component.text.TextView
                    android:id="@+id/asker_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/grey_charcoal"
                    android:textSize="@dimen/font_16"
                    app:fontTypeface="museosans500"
                    tools:text="Arnold Randy" />

                <com.donate.savelife.component.text.TextView
                    android:id="@+id/blood_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:layout_marginBottom="@dimen/dimen_2"
                    android:maxLines="1"
                    android:textColor="@color/grey_charcoal"
                    android:textSize="@dimen/font_16"
                    app:fontTypeface="museosans500"
                    tools:text="Arnold Randy" />
            </LinearLayout>

        </RelativeLayout>

        <com.donate.savelife.component.text.TextView
            android:id="@+id/user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/dimen_82"
            android:layout_marginTop="@dimen/dimen_10"
            android:textColor="@color/grey_cool"
            android:textSize="@dimen/font_14"
            app:fontTypeface="museosans500"
            tools:text="Shri Sai Paying Guest" />

    </LinearLayout>

</merge>