<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_login_background</item>
        <item name="colorPrimaryDark">@color/material_login_button</item>
        <item name="colorAccent">@color/material_login_login_color</item>
        <item name="titleTextColor">@color/material_login_login_color</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
        <item name="android:actionMenuTextColor">@color/white_neutral</item>
    </style>


    <style name="AppTheme.ActionBar"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">?android:attr/textColorPrimaryInverse</item>
        <item name="actionMenuTextColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="AppTheme.ActionBar.Inverted"
        parent="AppTheme.ActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.SelectableItemTheme">
        <item name="colorControlHighlight">@color/material_login_login_color</item>
    </style>
    <style name="AppTheme.SelectableItemBackground">
        <item name="android:theme">@style/AppTheme.SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.TextAppearanceRegister">
        <item name="android:textColor">@color/material_login_login_color</item>
        <item name="colorControlNormal">@color/material_login_login_color</item>
        <item name="android:textColorHint">@color/material_login_login_color</item>
        <item name="colorControlActivated">@color/material_login_login_color</item>
        <item name="colorControlHighlight">@color/material_login_login_color</item>
    </style>

    <style name="AppTheme.TextAppearanceLogin">
        <item name="android:textColor">@color/material_login_login_color</item>
        <item name="colorControlNormal">@color/material_login_login_color</item>
        <item name="android:textColorHint">@color/material_login_login_color</item>
        <item name="colorControlActivated">@color/material_login_login_color</item>
        <item name="colorControlHighlight">@color/material_login_login_color</item>
    </style>

    <style name="AppTheme.TextAppearanceLoginError" parent="android:Widget.TextView">
        <item name="android:textColor">@color/material_login_login_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.TextAppearanceRegisterError" parent="android:Widget.TextView">
        <item name="android:textColor">@color/material_login_register_error_color</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
