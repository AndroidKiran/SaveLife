<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.TextInputLayout">
        <item name="android:textColor">@color/material_login_background</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/material_login_background</item>
        <item name="colorControlHighlight">@color/material_login_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dimen_16</item>
        <item name="android:layout_marginRight">@dimen/dimen_16</item>
    </style>



    <style name="AppTheme.EditText" parent="AppTheme.ActionBar">
        <item name="android:textColor">@color/black_1</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/material_login_background</item>
        <item name="colorControlHighlight">@color/material_login_button</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dimen_16</item>
        <item name="android:layout_marginRight">@dimen/dimen_16</item>
    </style>

    <style name="AppTheme.TextAppearanceError" parent="android:Widget.TextView">
        <item name="android:textColor">@color/material_login_register_error_color</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>


    <style name="AppTheme.TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabPaddingStart">@dimen/dimen_2</item>
        <item name="tabPaddingEnd">@dimen/dimen_2</item>
        <item name="elevation">@dimen/dimen_1</item>
        <item name="tabGravity">fill</item>
    </style>


    <style name="AppTheme.TabLayout.StandardTabs">
        <item name="android:background">@color/material_login_background</item>
        <item name="tabIndicatorColor">@color/white_neutral</item>
        <item name="tabSelectedTextColor">@color/white_neutral</item>
        <item name="tabTextColor">@color/grey_pale_2</item>
    </style>

    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>

    <style name="CollapsingTextAppearance.Inverse" >
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TransperentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>
