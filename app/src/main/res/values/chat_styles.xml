<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Chat" />

  <style name="Chat.RecyclerView">
    <item name="android:clipToPadding">false</item>
    <item name="android:paddingBottom">@dimen/dimen_72</item>
  </style>

  <style name="Chat.NewMessage" />

  <style name="Chat.NewMessage.Layout">
    <item name="android:background">@drawable/layer_shadow</item>
    <item name="android:elevation">@dimen/dimen_4</item>
    <item name="android:gravity">center_vertical</item>
  </style>

  <style name="Chat.NewMessage.Text">
    <item name="android:textSize">@dimen/font_14</item>
    <item name="android:paddingRight">@dimen/dimen_10</item>
    <item name="android:paddingLeft">@dimen/dimen_10</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:paddingBottom">@dimen/dimen_6</item>
    <item name="android:paddingTop">@dimen/dimen_6</item>
    <item name="android:textColor">@color/text_grey</item>
  </style>

  <style name="Chat.Message" />

  <style name="Chat.Message.BodyLayout">
    <item name="android:paddingTop">@dimen/dimen_6</item>
  </style>

  <style name="Chat.Message.Body">
    <item name="android:paddingLeft">@dimen/dimen_26</item>
    <item name="android:paddingRight">@dimen/dimen_10</item>
    <item name="android:paddingBottom">@dimen/dimen_8</item>
    <item name="android:paddingTop">@dimen/dimen_8</item>
    <item name="android:textColor">@color/black_1</item>
    <item name="android:textSize">@dimen/font_14</item>
  </style>

  <style name="Chat.Message.Body.Self">
    <item name="android:paddingLeft">@dimen/dimen_10</item>
    <item name="android:paddingRight">@dimen/dimen_26</item>
  </style>

  <style name="Chat.Message.Photo">
    <item name="android:scaleType">fitCenter</item>
  </style>

  <style name="Chat.Message.Metadata">
    <item name="android:gravity">right</item>
    <item name="android:paddingRight">@dimen/dimen_70</item>
  </style>

  <style name="Chat.Message.Metadata.Self">
    <item name="android:gravity">right</item>
  </style>

  <style name="Chat.Message.Author">
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textColor">@color/text_grey</item>
    <item name="android:textSize">@dimen/font_10</item>
  </style>

  <style name="Chat.Message.Time">
    <item name="android:paddingLeft">@dimen/dimen_8</item>
    <item name="android:textColor">@color/text_grey_light</item>
    <item name="android:textSize">@dimen/font_10</item>
  </style>

</resources>
