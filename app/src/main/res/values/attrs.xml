<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="fontTypeface" format="enum">
        <enum name="museosans500" value="0" />
        <enum name="museosans700" value="1" />
        <enum name="pt_serif_regular" value="2" />
        <enum name="pt_serif_bold" value="3" />
    </attr>

    <attr name="textSpacing" format="float" />

    <!--TextView-->
    <declare-styleable name="TextView">
        <attr name="fontTypeface" />
        <attr name="textSpacing" />
    </declare-styleable>

    <declare-styleable name="AvatarImageBehavior">
        <attr name="finalYPosition" format="dimension"/>
        <attr name="startXPosition" format="dimension"/>
        <attr name="startToolbarPosition" format="dimension"/>
        <attr name="startHeight" format="dimension"/>
        <attr name="finalHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="MultiStateView">
        <attr name="msv_loadingView" format="reference" />
        <attr name="msv_emptyView" format="reference" />
        <attr name="msv_errorView" format="reference" />
        <attr name="msv_viewState" format="enum">
            <enum name="content" value="0" />
            <enum name="error" value="1" />
            <enum name="empty" value="2" />
            <enum name="loading" value="3" />
        </attr>
    </declare-styleable>

</resources>
